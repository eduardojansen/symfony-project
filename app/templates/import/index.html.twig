{% extends 'base.html.twig' %}

{% block title %}Importar XML{% endblock %}

{% block body %}
    <div class="container mt-3">
        {% include 'message.html.twig' %}

        <h2 class="mt-3">Importar XML</h2>
        <form action="{{ path('upload') }}" class="mt-3" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Selecionar arquivo</label>
                <input type="file" name="files[]" multiple class="form-control">
            </div>
            <div class="form-group text-center mt-2">
                <button type="submit" class="btn btn-success">Enviar Arquivos</button>
            </div>
        </form>

        {% if xmls %}
            <h4 class="mt-3">Arquivos disponíveis para importação</h4>
            <ul class="mt-3">
                {% for xmlFile in xmls %}
                    <li>{{ xmlFile.fileNameWithExtension }}
                        <a href="/import/{{ xmlFile.fileNameWithExtension }}">[processar arquivo]</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <h4 class="mt-3">Endpoints da API <span style="color: #2e3436; font-size: 14px;">(Requer autenticação)</span></h4>
        <ul class="mt-3">
            <li><a href="/people">/people</a></li>
            <li><a href="/shiporders">/shiporders</a></li>
        </ul>
    </div>
{% endblock %}